{
    "compilerOptions": {
        "target": "es2019",
        "module": "esnext",
        "strict": true,
        "jsx": "react",
        "importHelpers": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "allowJs": true,
        "checkJs": false,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "outDir": "dist",
        "declaration": true
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules/",
    ]
}